<%-include("partials/header");-%>

    <h1>Home</h1>
    <p>
        <%=homeStartingContent%>
    </p>

    <h2>New Post</h2>
    <form action="/compose" method="get">
    <button type="submit" style="border-radius: 100px;width: 40px;height: 40px;">+</button>
    </form>
    <h2>Posts</h2>
    <%if(homePosts.length===0){%>
        <h5>No Posts Yet!!!</h5>
    <%}else{%>
    <%for(let i=0;i< homePosts.length;i++){%>
        <h3 style="text-transform: capitalize;"><%=homePosts[i].title%></h3>
        <p style="width: 50vw;display: inline;"><%=homePosts[i].content%></p>....<a href="/<%=homePosts[i].title%>">Read More</a>
        <%}%>
    <%}%>

<%-include("partials/footer");-%>
